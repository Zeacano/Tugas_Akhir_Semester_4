<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    >

    <ImageView
        android:id="@+id/imageViewIsland"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/sml_island"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/imageViewMapIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="282dp"
        android:src="@drawable/mapsam"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onMapIconClick"
        />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewIsland"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginTop="-15dp"
        android:textSize="13sp"
        android:text="@string/island_description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Samalona Island"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="15dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp" />

    <!-- Tambahkan elemen lainnya di sini -->

</RelativeLayout>
